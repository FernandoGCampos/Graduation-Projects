import java.io.IOException;

public class Ex4b {

	public static void main(String[] args) throws IOException {
		int x;
		System.out.println("Digite o número que se quer saber se ele é primo: ");
		x = EntradaTeclado.leInt();
		
		
		int i = 2;
		Double modulo = 1.0;
		for(i = 2; i < x && modulo != 0; ++i) {
			modulo = (double) x % i; 	
		}
		if(x == 2) {
			System.out.printf("É primo\n");
		}
		else if(modulo == 0) {
			--i;
			System.out.printf("Não é primo, pois é divisível por: %d\n", i);
		}
		else {
			System.out.printf("É primo\n");
		}
	
	}
	
}
